<odoo>
<record id="account_bank_statement_view_form" model="ir.ui.view">
    <field name="name">account.bank.statement form</field>
    <field name="model">account.bank.statement</field>
    <field name="inherit_id" ref="account.view_bank_statement_form" />
    <field name="priority" eval="20" />
    <field name="arch" type="xml">
        <xpath expr="//header/field[@name='state']" position="attributes">
            <attribute name="statusbar_visible">open,approval,confirm</attribute>
        </xpath>
        <xpath expr="//button[@name='check_confirm_bank']" position="before">
            <button
                    name="action_confirm"
                    type="object"
                    string="Confirm"
                    class="oe_highlight"
                    attrs="{'invisible':['|','|',('all_lines_reconciled','=',False),('line_ids','=',[]),('state', '!=', 'open')]}"
                />
            <button
                    name="action_approve_approval"
                    string="Approve"
                    states="approval"
                    type="object"
                    class="oe_highlight"
                />
            <button
                    name="action_reject_approval"
                    string="Reject"
                    type="object"
                    states="approval"
                />
            <button
                    name="action_request_approval"
                    string="Request Approval"
                    attrs="{'invisible': ['|',('state', '!=', 'approval'),'&amp;',('state', '=', 'approval'),('approval_template_id','!=',False)]}"
                    type="object"
                />
            <button
                    name="action_cancel"
                    type="object"
                    string="Cancel"
                    class="oe_highlight"
                    attrs="{'invisible':[('state','in',['cancel','reject'])]}"
                />
            <button
                    name="action_restart"
                    type="object"
                    string="Restart"
                    class="oe_highlight"
                    attrs="{'invisible':[('state','not in',['cancel','reject'])]}"
                />
        </xpath>

        <xpath expr="//button[@name='check_confirm_bank']" position="attributes">
            <attribute name="invisible">1</attribute>
            <attribute name="state" />
            <attribute name="attrs" />
        </xpath>

        <xpath expr="//button[@name='button_draft']" position="attributes">
            <attribute name="invisible">1</attribute>
            <attribute name="state" />
            <attribute name="attrs" />
        </xpath>

        <xpath expr="//header" position="after">
            <field name="need_validation" invisible="1" />
            <field name="approved" invisible="1" />
            <field name="rejected" invisible="1" />
        </xpath>

        <xpath expr="//notebook" position="inside">
            <page string="Approvals" name="tier_validation">
                <group>
                    <field name="approval_template_id" />
                    <field name="active_approver_partner_ids" widget="many2many_tags" />
                </group>
                <field
                        name="approval_ids"
                        attrs="{'invisible':[('approval_ids', '=', [])]}"
                        nolabel="1"
                    />
            </page>
        </xpath>
    </field>
</record>

</odoo>
