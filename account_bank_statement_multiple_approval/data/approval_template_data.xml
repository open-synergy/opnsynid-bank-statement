<odoo>
<data noupdate="1">
<!-- Bank Statement -->
<record id="bank_approval_template" model="approval.template">
    <field name="name">Standard Bank Statement</field>
    <field name="model_id" ref="account.model_account_bank_statement" />
    <field name="sequence" eval="100" />
    <field name="computation_method">use_python</field>
    <field name="python_code">rec.journal_id.type == "bank"</field>
    <field name="validate_sequence" eval="1" />
</record>
<record id="bank_approval_template_detail1" model="approval.template_detail">
    <field name="template_id" ref="bank_approval_template" />
    <field name="approver_selection_method">use_group</field>
    <field name="approver_group_ids" eval="[(6,0,[ref('base.group_user')])]" />
</record>

<!-- Cash Register -->
<record id="cash_approval_template" model="approval.template">
    <field name="name">Standard Cash Register</field>
    <field name="model_id" ref="account.model_account_bank_statement" />
    <field name="sequence" eval="100" />
    <field name="computation_method">use_python</field>
    <field name="python_code">rec.journal_id.type == "cash"</field>
    <field name="validate_sequence" eval="1" />
</record>
<record id="cash_approval_template_detail1" model="approval.template_detail">
    <field name="template_id" ref="cash_approval_template" />
    <field name="approver_selection_method">use_group</field>
    <field name="approver_group_ids" eval="[(6,0,[ref('base.group_user')])]" />
</record>
</data>
</odoo>
