<odoo>
<data noupdate="1">
<!-- Bank Statement -->
<record id="bank_policy_template" model="policy.template">
    <field name="name">Standard Bank Statement</field>
    <field name="model_id" ref="account.model_account_bank_statement" />
    <field
                name="state_field_id"
                search="[('model_id.model','=','account.bank.statement'),('name','=','state')]"
            />
    <field name="sequence" eval="100" />
    <field name="computation_method">use_python</field>
    <field name="python_code">result=False
if document.journal_id.type == "bank":
    result=True</field>
</record>

<record id="bank_policy_template_detail_confirm" model="policy.template_detail">
    <field name="template_id" ref="bank_policy_template" />
    <field
                name="field_id"
                search="[('model_id.model','=','account.bank.statement'),('name','=','confirm_ok')]"
            />
    <field name="restrict_state" eval="1" />
    <field name="states">open</field>
    <field name="restrict_user" eval="0" />
    <field name="restrict_additional" eval="1" />
    <field name="additional_python_code">result = False
if document.all_lines_reconciled:
    result = True</field>
</record>

<record id="bank_policy_template_detail_approve" model="policy.template_detail">
    <field name="template_id" ref="bank_policy_template" />
    <field
                name="field_id"
                search="[('model_id.model','=','account.bank.statement'),('name','=','approve_ok')]"
            />
    <field name="restrict_state" eval="1" />
    <field name="states">confirm</field>
    <field name="restrict_user" eval="0" />
    <field name="restrict_additional" eval="1" />
    <field name="additional_python_code">result = False
if env.user.id in document.active_approver_user_ids.ids:
    result = True</field>
</record>

<record id="bank_policy_template_detail_reject" model="policy.template_detail">
    <field name="template_id" ref="bank_policy_template" />
    <field
                name="field_id"
                search="[('model_id.model','=','account.bank.statement'),('name','=','reject_ok')]"
            />
    <field name="restrict_state" eval="1" />
    <field name="states">confirm</field>
    <field name="restrict_user" eval="0" />
    <field name="restrict_additional" eval="1" />
    <field name="additional_python_code">result = False
if env.user.id in document.active_approver_user_ids.ids:
    result = True</field>
</record>

<record id="bank_policy_template_detail_cancel" model="policy.template_detail">
    <field name="template_id" ref="bank_policy_template" />
    <field
                name="field_id"
                search="[('model_id.model','=','account.bank.statement'),('name','=','cancel_ok')]"
            />
    <field name="restrict_state" eval="1" />
    <field name="states">open,confirm,validate,done</field>
    <field name="restrict_user" eval="0" />
    <field name="restrict_additional" eval="0" />
</record>

<record id="bank_policy_template_detail_restart" model="policy.template_detail">
    <field name="template_id" ref="bank_policy_template" />
    <field
                name="field_id"
                search="[('model_id.model','=','account.bank.statement'),('name','=','restart_ok')]"
            />
    <field name="restrict_state" eval="1" />
    <field name="states">cancel,reject</field>
    <field name="restrict_user" eval="0" />
    <field name="restrict_additional" eval="0" />
</record>
<record id="bank_policy_template_detail_reconcile" model="policy.template_detail">
    <field name="template_id" ref="bank_policy_template" />
    <field
                name="field_id"
                search="[('model_id.model','=','account.bank.statement'),('name','=','reconcile_ok')]"
            />
    <field name="restrict_state" eval="0" />
    <field name="restrict_user" eval="0" />
    <field name="restrict_additional" eval="1" />
    <field name="additional_python_code">result = True
if document.all_lines_reconciled:
    result = False

if len(document.line_ids) == 0:
    result = False

if document.state != "open":
    result = False</field>
</record>

