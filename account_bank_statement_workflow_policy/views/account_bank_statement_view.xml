<odoo>
    <record id="account_bank_statement_view_form" model="ir.ui.view">
        <field name="name">account.bank.statement.workflow.policy.form</field>
        <field name="model">account.bank.statement</field>
        <field name="inherit_id" ref="account.view_bank_statement_form" />
        <field name="priority" eval="30" />
        <field name="arch" type="xml">
            <data>
                <xpath
                    expr="//button[@name='%(account.action_bank_reconcile_bank_statements)d']"
                    position="attributes"
                >
                    <attribute name="states" />
                    <attribute
                        name="attrs"
                    >{'invisible':[('reconcile_ok', '=', False)]}</attribute>
                </xpath>
                <xpath
                    expr="//button[@name='check_confirm_bank']"
                    position="attributes"
                >
                    <attribute name="states" />
                    <attribute
                        name="attrs"
                    >{'invisible':[('validate_ok', '=', False)]}</attribute>
                </xpath>
                <xpath expr="//button[@name='action_confirm']" position="attributes">
                    <attribute
                        name="attrs"
                    >{'invisible':[('confirm_ok', '=', False)]}</attribute>
                </xpath>
                <xpath expr="//button[@name='action_cancel']" position="attributes">
                    <attribute
                        name="attrs"
                    >{'invisible':[('cancel_ok', '=', False)]}</attribute>
                </xpath>
                <xpath expr="//button[@name='action_restart']" position="attributes">
                    <attribute
                        name="attrs"
                    >{'invisible':[('restart_ok', '=', False)]}</attribute>
                </xpath>
                <xpath
                    expr="//button[@name='action_approve_approval']"
                    position="attributes"
                >
                    <attribute
                        name="attrs"
                    >{'invisible':[('approve_ok', '=', False)]}</attribute>
                </xpath>
                <xpath
                    expr="//button[@name='action_reject_approval']"
                    position="attributes"
                >
                    <attribute
                        name="attrs"
                    >{'invisible':[('reject_ok', '=', False)]}</attribute>
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page
                        string="Polices"
                        name="page_policies"
                        groups="base.group_system"
                    >
                        <group name="group_1" colspan="4" col="2">
                            <field name="policy_template_id" />
                            <field name="reconcile_ok" />
                            <field name="validate_ok" />
                            <field name="confirm_ok" />
                            <field name="cancel_ok" />
                            <field name="restart_ok" />
                            <field name="reject_ok" />
                            <field name="approve_ok" />
                        </group>
                    </page>
                </xpath>
            </data>
        </field>
    </record>
</odoo>
