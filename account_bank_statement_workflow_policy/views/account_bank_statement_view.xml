<odoo>
    <record id="account_bank_statement_view_form" model="ir.ui.view">
        <field name="name">account.bank.statement.workflow.policy.form</field>
        <field name="model">account.bank.statement</field>
        <field name="inherit_id" ref="account.view_bank_statement_form" />
        <field name="arch" type="xml">
            <data>
                <xpath
                    expr="//button[@name='%(account.action_bank_reconcile_bank_statements)d']"
                    position="attributes"
                >
                    <attribute name="states" />
                    <attribute
                        name="attrs"
                    >{'invisible':['|','|',('all_lines_reconciled','=',True),('line_ids','=',[]),('reconcile_ok', '=', False)]}</attribute>
                </xpath>
                <xpath
                    expr="//button[@name='check_confirm_bank']"
                    position="attributes"
                >
                    <attribute name="states" />
                    <attribute
                        name="attrs"
                    >{'invisible':['|','|',('all_lines_reconciled','=',False),('line_ids','=',[]),('validate_ok', '=', False)]}</attribute>
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page
                        string="Polices"
                        name="page_policies"
                        groups="base.group_system"
                    >
                        <group name="group_1" colspan="4" col="2">
                            <field name="policy_template_id" />
                            <field name="reconcile_ok" />
                            <field name="validate_ok" />
                        </group>
                    </page>
                </xpath>
            </data>
        </field>
    </record>
</odoo>
