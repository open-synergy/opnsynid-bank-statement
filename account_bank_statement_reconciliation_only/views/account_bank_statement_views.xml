<openerp>
<data>

<record id="account_bank_statement_view_form" model="ir.ui.view">
    <field name="name">account.bank.statement form - Reconciliation Only</field>
    <field name="model">account.bank.statement</field>
    <field name="inherit_id" ref="account.view_bank_statement_form"/>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='journal_id']" position="before">
                <field name="reconciliation_only" invisible="1"/>
            </xpath>

            <xpath expr="//field[@name='date']" position="after">
                <field name="date_end" attrs="{'required': [('reconciliation_only','=',True)]}"/>
            </xpath>

            <xpath expr="//page[@name='statement_line_ids']" position="replace"/>

            <xpath expr="//notebook" position="inside">
                <page string="Transactions" name="statement_line_ids">
                    <field name="line_ids" context="{'date':date}">
                        <tree create="false" edit="false" delete="false" colors="grey:journal_entry_id!=False">
                            <field name="sequence" widget="handle"/>
                            <field name="journal_entry_id" invisible="1"/>
                            <field name="date" attrs="{'readonly' : [('journal_entry_id', '!=', False)] }"/>
                            <field name="name" attrs="{'readonly' : [('journal_entry_id', '!=', False)] }"/>
                            <field name="ref" attrs="{'readonly' : [('journal_entry_id', '!=', False)] }"/>
                            <field name="partner_id" domain="['|',('parent_id','=',False),('is_company','=',True)]"
                                 context="{'default_supplier': 1}"
                                 attrs="{'readonly' : [('journal_entry_id', '!=', False)] }"/>
                            <field name="amount" attrs="{'readonly' : [('journal_entry_id', '!=', False)] }"/>
                            <field name="amount_currency" groups="base.group_multi_currency" attrs="{'readonly' : [('journal_entry_id', '!=', False)] }"/>
                            <field name="currency_id" groups="base.group_multi_currency" attrs="{'readonly' : [('journal_entry_id', '!=', False)] }"/>
                            <field name="bank_account_id" groups="base.group_no_one" attrs="{'readonly' : [('journal_entry_id', '!=', False)] }"
                                domain="['|', ('partner_id', '=', partner_id), ('partner_id', '=', False)]"/>
                        </tree>
                    </field>
                </page>
            </xpath>

            <xpath expr="//header/span/button[@name='button_confirm_bank']" position="before">
                <button name="action_populate_transanction" string="Populate Transaction" type="object" states="draft,open"/>
                <button name="action_remove_transaction" string="Clear Transaction" type="object" states="draft,open"/>
            </xpath>
        </data>
    </field>
</record>

<record id="account_bank_statement_view_form_1" model="ir.ui.view">
    <field name="name">account.bank.statement form - Reconciliation Only</field>
    <field name="model">account.bank.statement</field>
    <field name="inherit_id" ref="account.view_bank_statement_form2"/>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='journal_id']" position="before">
                <field name="reconciliation_only" invisible="1"/>
            </xpath>

            <xpath expr="//field[@name='date']" position="after">
                <field name="date_end" attrs="{'required': [('reconciliation_only','=',True)]}"/>
            </xpath>

            <xpath expr="//field[@name='line_ids']" position="replace"/>

            <xpath expr="//page[@string='Cash Transactions']" position="inside">
                <field name="line_ids" context="{'date':date}">
                    <tree create="false" edit="false" delete="false" colors="grey:journal_entry_id!=False">
                        <field name="sequence" invisible="1"/>
                        <field name="journal_entry_id" invisible="1"/>
                        <field name="date" attrs="{'readonly' : [('journal_entry_id', '!=', False)] }"/>
                        <field name="name" attrs="{'readonly' : [('journal_entry_id', '!=', False)] }"/>
                        <field name="ref" attrs="{'readonly' : [('journal_entry_id', '!=', False)] }"/>
                        <field name="partner_id" attrs="{'readonly' : [('journal_entry_id', '!=', False)] }"/>
                        <field name="amount" attrs="{'readonly' : [('journal_entry_id', '!=', False)] }"/>
                    </tree>
                </field>
            </xpath>

            <xpath expr="//header/span/button[@name='button_confirm_cash']" position="before">
                <button name="action_populate_transanction" string="Populate Transaction" type="object" states="open"/>
                <button name="action_remove_transaction" string="Clear Transaction" type="object" states="open"/>
            </xpath>
        </data>
    </field>
</record>

</data>
</openerp>
