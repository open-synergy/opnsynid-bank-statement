<openerp>
<data>

<record id="account_journal_view_form" model="ir.ui.view">
    <field name="name">account.journal form - Reconciliation Only</field>
    <field name="model">account.journal</field>
    <field name="inherit_id" ref="account.view_account_journal_form"/>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='group_invoice_lines']" position="after">
                <field name="reconciliation_only"
                    attrs="{'invisible':[('type','not in',['cash','bank'])]}"
                    />
            </xpath>
        </data>
    </field>
</record>

</data>
</openerp>
